<head>
    <link href="https://fonts.googleapis.com/css?family=Catamaran:500,700|Quicksand&display=swap" rel="stylesheet"> 
</head>
<div style="font-family: 'Catamaran', sans-serif;">
    <div class="album py-5 bg-light">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <h1 align="center" style="margin-top: 20px; font-weight: 500">CREATE AN ACCOUNT</h1>

                    <div class="card-body" id="event_card">
                        <%= form_for :user do |f| %>
                            <%= f.label "First Name: " %>
                            <%= f.text_field :first_name %>
                            <br>
                            <%= f.label "Last Name: " %>
                            <%= f.text_field :last_name %>
                            <br>
                            <%= f.label "Username: " %>
                            <%= f.text_field :username %>
                            <br>
                            <%= f.label "Password: " %>
                            <%= f.password_field :password %>
                            <br>
                            <br>
                            <%= f.submit "Submit" %>
                        <% end %>
                      <br>
                    </div>
                  </div>
                </div>
              </div>    
            <div class="col-md-4"></div>
        </div>
    </div>



    </div>
</div>






